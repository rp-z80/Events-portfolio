<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Meeting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_teal</item>
        <item name="colorSecondaryVariant">@color/dark_teal</item>
        <item name="colorOnSecondary">@color/dark_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="datepicker_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/light_teal</item>
        <item name="colorControlHighlight">@color/light_teal</item>
        <item name="colorControlActivated">@color/light_teal</item>
    </style>

    <style name="timepicker_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/light_teal</item>
        <item name="colorControlHighlight">@color/light_teal</item>
        <item name="colorControlActivated">@color/light_teal</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

</resources>